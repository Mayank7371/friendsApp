<% content_for :title, "Friends" %>

<h1 class="text-3xl font-bold mb-6">Friends</h1>

<div class="overflow-x-auto bg-white shadow-md rounded-lg p-4">
  <table class="min-w-full border border-gray-200 rounded-lg">
    <thead>
      <tr class="bg-gray-100 text-left text-sm font-semibold">
        <th class="py-3 px-4 border-b">First name</th>
        <th class="py-3 px-4 border-b">Last name</th>
        <th class="py-3 px-4 border-b">Email</th>
        <th class="py-3 px-4 border-b">Phone</th>
        <th class="py-3 px-4 border-b">Twitter</th>
        <th class="py-3 px-4 border-b text-right">Actions</th>
      </tr>
    </thead>

    <tbody class="text-sm">
      <% @friends.each do |friend| %>
        <tr class="hover:bg-gray-50">
          <td class="py-3 px-4 border-b"><%= friend.first_name %></td>
          <td class="py-3 px-4 border-b"><%= friend.last_name %></td>
          <td class="py-3 px-4 border-b"><%= friend.email %></td>
          <td class="py-3 px-4 border-b"><%= friend.phone %></td>
          <td class="py-3 px-4 border-b"><%= friend.twitter %></td>

          <!-- Right side actions -->
          <td class="py-3 px-4 border-b text-right space-x-3">

            <%= link_to "Show",
                friend_path(friend),
                class: "text-blue-600 hover:underline" %>

            <%= link_to "Edit",
                edit_friend_path(friend),
                class: "text-green-600 hover:underline" %>

            <%= button_to "Destroy",
                friend_path(friend),
                method: :delete,
                data: { turbo_confirm: "Are you sure?" },
                class: "text-red-600 hover:underline inline-block",
                form: { class: "inline-block" } %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-4">
  <%= link_to "New Friend", new_friend_path, class: "text-blue-600 hover:underline" %>
</div>
